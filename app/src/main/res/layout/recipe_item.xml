<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_to_image_image"
    app:cardCornerRadius="@dimen/card_view_radius"
    app:cardElevation="@dimen/card_view_elevation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_item_recipe_image"
            android:contentDescription="@string/content_recipe_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_recipe_image"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_default_recipe_image">
        </ImageView>
        <TextView
            android:id="@+id/tv_item_recipe_name"
            style="@style/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            tools:text="Nutella Pie"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>