<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper_widget_ingredient_list"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_widget_ingredient_checkbox"
        android:src="@drawable/ic_baseline_check_box_outline_blank_24"
        android:layout_marginEnd="@dimen/space_to_text_text"
        android:layout_marginStart="@dimen/space_to_boarder_text"
        android:layout_marginTop="@dimen/space_to_text_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_widget_ingredient_name"
        style="@style/label_context_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:layout_alignBottom="@+id/iv_widget_ingredient_checkbox"
        android:layout_marginEnd="@dimen/space_to_text_text"
        android:layout_toEndOf="@+id/iv_widget_ingredient_checkbox"
        tools:text="Graham Cracker crumbs" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_widget_ingredient_qty"
            style="@style/label_context_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_to_text_text"
            tools:text="2" />

        <TextView
            android:id="@+id/tv_widget_ingredient_meas"
            style="@style/label_context_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_to_boarder_text"
            tools:text="CUP" />

    </LinearLayout>

</RelativeLayout>